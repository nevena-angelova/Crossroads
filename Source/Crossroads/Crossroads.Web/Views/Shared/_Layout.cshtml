@using Crossroads.Common
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <meta name="description" content="Crossroads - Сайт за рок и метъл култура" />
    <meta name="keywords" content="Crossrads, metal, метъл, rock, рок, музика, форум, метъл форум, forum" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="revisit-after" content="1 month">
    <meta name="rating" content="general" />
    <meta name="author" content="Nevena Angelova" />
    <title>@ViewBag.Title - Crossroads</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("JavaScript", required: false)
    @RenderSection("CSS", required: false)
</head>
<body>
    <header id="header">
        <a id="menuBtn" class="mobile-menu-btn" href="#">
            <span class="menu-btn-icon"></span>
            <span class="menu-btn-icon"></span>
            <span class="menu-btn-icon"></span>
        </a>
        @Html.Partial("_LoginPartial", new Crossroads.Web.ViewModels.LoginViewModel())
        <div class="logo-wrap">
            <img class="logo" src="~/Content/img/logo.png" alt="Crossroads Logo" />
            <h1>Сайт за рок и метъл култура</h1>
        </div>
    </header>
    <nav id="navigation">
        @if (!User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Вход", "Login", new { controller = "Account" }, new { @class = "login-btn-mobile" })
        }
        else
        {
            using (Html.BeginForm("LogOff", "Account", new { area = string.Empty }, FormMethod.Post, new { id = "logoutFormMobile" }))
            {
                @Html.AntiForgeryToken()
                @("Здравей, " + User.Identity.GetUserName() + "!")
                <a class="logout-btn-mobile" href="javascript:document.getElementById('logoutFormMobile').submit()">Изход</a>
            }
        }
        <ul>
            <li>@Html.ActionLink("Начало", "Index", "Home", new { area = string.Empty }, null)</li>
            <li>@Html.ActionLink("Профил", "DisplayProfile", "Profile", new { area = string.Empty }, new { userName = User.Identity.Name })</li>
            <li>@Html.ActionLink("Форум", "DisplayCategories", "Forum", new { area = string.Empty }, null)</li>
            <li>@Html.ActionLink("За сайта", "About", "Home", new { area = string.Empty }, null)</li>
            @if (User.IsInRole(GlobalConstants.AdminRole))
            {
                <li>@Html.ActionLink("Администрация", "ListUsers", "UsersAdmin", new { area = "Administration" }, null)</li>
            }
            @if (User.IsInRole(GlobalConstants.ModeratorRole))
            {
                <li>@Html.ActionLink("Администрация", "ListCategories", "Categories", new { area = "Administration" }, null)</li>
            }
        </ul>
    </nav>
    <section id="content">
        @RenderBody()
    </section>
    <footer id="footer">
        <p>&copy; Crossroads @DateTime.Now.Year</p>
    </footer>

    @RenderSection("scripts", required: false)

    <script>
        $('#menuBtn').click(function () {
            $('#navigation').toggleClass('opened');
            $('#header').toggleClass('opened');
            $('#content').toggleClass('opened');
            $('#footer').toggleClass('opened');
        })

        $('#loginBtn').click(function () {
            $('#loginFields').toggle();
        })
    </script>
</body>
</html>