@using Crossroads.Web.Areas.Administration.ViewModels.Interests
@model EditInterestViewModel

@using (Ajax.BeginForm("EditInterest",
        new AjaxOptions
        {
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "interest" + Model.Id
        }))
{
    @Html.AntiForgeryToken()
    @Html.TextBoxFor(m => m.Name)
    @Html.ValidationMessageFor(m => m.Name)
    <input type="submit" value="OK" />
    @Ajax.ActionLink("Откажи", "EditInterest", new { id = Model.Id, refuse = true },
    new AjaxOptions
    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "interest" + Model.Id
    });
}

<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse($('#interestTd' + @(Model.Id)));
</script>



